{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "iotHubName": {
            "type": "String"
        },
        "eventHubNSName": {
            "type": "String"
        }
    },
    "variables": {
        "eventhubNameIoTdrive": "[concat(parameters('eventHubNSName'), '/iot-drive/', 'iothubroutes_drive')]",
        "eventhubNameIoTmessage": "[concat(parameters('eventHubNSName'), '/iot-messages/', 'iothubroutes_messages')]"
    },
    "resources": [
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2021-07-01-preview",
            "name": "[parameters('iotHubName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "capacity": 1
            },
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 4
                    }
                },
                "routing": {
                    "endpoints": {
                        "eventHubs": [
                            {
                                "connectionString": "[listkeys(resourceId('Microsoft.EventHub/namespaces/eventhubs/authorizationRules', variables('eventhubNameIoTdrive')), '2017-04-01').primaryConnectionString]",
                                "name": "iot-drive",
                                "subscriptionId": "[subscription().subscriptionId]",
                                "resourceGroup": "[resourceGroup().name]"
                            },
                            {
                                "connectionString": "[listkeys(resourceId('Microsoft.EventHub/namespaces/eventhubs/authorizationRules', variables('eventhubNameIoTmessage')), '2017-04-01').primaryConnectionString]",
                                "name": "iot-message",
                                "subscriptionId": "[subscription().subscriptionId]",
                                "resourceGroup": "[resourceGroup().name]"
                            }
                        ]
                    },
                    "routes": [
                        {
                            "name": "drive-message-route",
                            "source": "DeviceMessages",
                            "condition": "messageType=\"drive\"",
                            "endpointNames": [
                                "iot-drive"
                            ],
                            "isEnabled": true
                        },
                        {
                            "name": "other-message-route",
                            "source": "DeviceMessages",
                            "condition": "messageType <> \"drive\"",
                            "endpointNames": [
                                "iot-message"
                            ],
                            "isEnabled": true
                        }
                    ]
                }
            }
        }
    ]
}